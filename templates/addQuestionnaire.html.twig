{% block content %}
    <div class="p-10 min-h-screen flex items-center justify-center bg-gray-900 min-h-full p-10">
        <div class="content bg-white p-10 rounded-lg shadow md:w-3/4 lg:w-1/2 mx-auto ">
        <form action="questionnaire" method="post">
            <br>
            <h1 class="font-bold text-xl text-gray-700 police-mono">Ajouter un nouveau questionnaire</h1>
            <br>
            <label class="block mb-2 font-bold text-gray-700 text-md">Id Questionnaire</label>
            <input placeholder="L'id du questionnaire..." class="border border-gray-300 shadow p-3 w-full rounded focus:outline-none focus:ring-2 focus:ring-indigo-300 focus:border-transparent transition duration-300" type="number" name="idQuestionnaire" required>
            <br>
            <label class="block mb-2 font-bold text-gray-700 text-md mt-4">Libellé questionnaire</label>
            <input placeholder="Le libellé du questionnaire..." class="border border-gray-300 shadow p-3 w-full rounded focus:outline-none focus:ring-2 focus:ring-indigo-300 focus:border-transparent transition duration-300" type="text" name="libelleQuestionnaire" required>
            <br>
            <input class="bg-indigo-500 hover:bg-indigo-400 w-full p-3 shadow-md font-bold text-lg text-white rounded-lg transition duration-300 mt-6" type="submit" value="Confirmer">
        </form>
        </div>
    </div>
{% endblock %}